<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Форум студентов", "Index", "Home", new { area = "", id = ViewBag.CurrentStudent != null ? ViewBag.CurrentStudent.Id : 0 }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.CurrentStudent != null)
                    {
                        <li>@Html.ActionLink("Выход с форума", "Index", new { area = "", controller = "Home", id = 0 })</li>
                        <li>@Html.ActionLink("Список Студентов", "Index", new { area = "", controller = "Students", id = ViewBag.CurrentStudent!=null ? ViewBag.CurrentStudent.Id : 0 })</li>
                        <li>@Html.ActionLink("Список тем форума", "Index", new { area = "", controller = "Posts", id = ViewBag.CurrentStudent != null ? ViewBag.CurrentStudent.Id : 0 })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Вход на форум", "Index", new { area = "", controller = "Home", id = ViewBag.CurrentStudent != null ? ViewBag.CurrentStudent.Id : 0 })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
