
@{
    Layout = null;
}

@model Twitter.Web.ViewModels.Twit.TwitView
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
    <title>Twitter</title>
</head>
<body>
    <div class="container-fluid h-100 bg-info">
        <div class="row ">
            <div class="col-12 h-25">
                <nav class="navbar fixed-top navbar-expand-sm bg-light navbar-light p-0">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active p-0 mx-2">
                            <a class="navbar-brand" href="@Url.Action("Index", "Twit")">
                                <img src="~/images/Twitter-red.png" alt="Logo" style="width:40px;">
                            </a>
                        </li>
                    </ul>

                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">


                        <ul class="nav navbar-nav">
                            <li class="nav-item p-0 mx-2 mt-2 ">
                                <h2>@await Html.PartialAsync("_LoginPartial")</h2>
                            </li>

                            <li class="nav-item p-0 mx-2 mt-2 ">
                                <a href="" class="btn btn-primary mb-2" data-toggle="modal" data-target="#modalTwit">Tweet</a>
                            </li>

                            <li class="nav-item mx-2 p-0 mt-2 ">
                                <a href="@Url.Action("LogOut", "User")" class="btn btn-primary mb-2">Sign Out</a>
                            </li>
                        </ul>

                    </div>
                </nav>
            </div>


            <div class="d-none d-sm-none d-md-block col-md-3 pt-5 mt-2 ">
                <div class="card m-2">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>

                <div class="card m-2">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6   pt-5 mt-2 pl-0  bgcolor">
                <ul id="reports">
                    @if (Model != null)
                    {
                    @foreach (var now in Model.Twits)
                    {
                    <li>    
                    <div class="card border">
                        <div class="card-header h2 text-light bg-dark">
                            @now.Header
                        </div>
                        <div class="card-body h3 ">
                            @now.TwitId
                        </div>
                        <div class="card-footer h6 text-primary">
                            @now.TagString
                        </div>
                    </div>
                    </li>
                    }
                    }
                </ul>
            </div>
            <div class="d-none d-sm-none d-md-block col-0 col-md-3  pt-5 mt-2">
                <div class="card m-2">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>

                <div class="card m-2">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalTwit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Write to us</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body mx-3">
                        <div class="md-form mb-5">
                            <i class="fa fa-user prefix grey-text"></i>
                            <input asp-for="AddedTags" type="text" id="AddedTags" class="form-control validate">
                            <label asp-for="AddedTags">Tags</label>
                            <span asp-validation-for="AddedTags" class="text-danger"></span>
                        </div>

                        <div class="md-form mb-5">
                            <i class="fa fa-tag prefix grey-text"></i>
                            <input asp-for="AddedHeader" type="text" id="AddedHeader" class="form-control validate">
                            <label asp-for="AddedHeader">Subject</label>
                            <span asp-validation-for="AddedHeader" class="text-danger"></span>
                        </div>

                        <div class="md-form">
                            <i class="fa fa-pencil prefix grey-text"></i>
                            <textarea asp-for="AddedTwit" type="text" id="AddedTwit" class="md-textarea form-control" rows="4"></textarea>
                            <label asp-for="AddedTwit">Your message</label>
                            <span asp-validation-for="AddedTwit" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-unique" id="send" data-dismiss="modal">Send <i class="fa fa-paper-plane-o ml-1"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>





    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/signalr-client.min.js"></script>
</body>
</html>