@{
    Layout = null;
}

@model Twitter.Web.ViewModels.User.LoginView

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/sitetmp.css">
    <title>Twitter</title>
</head>
<body>
    <div class="container-fluid h-100 w-100 pl-0">
        <div class="row h-100">
            <div class="col-12 col-md-6 bg order-1 order-md-0">
            </div>
            <div class="col-12 col-md-6 order-0 order-md-1">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row align-items-center pt-2">
                        <div class="col-auto">
                            <label class="sr-only" for="inlineFormInput">Email</label>
                            <input asp-for="Email" class="form-control mb-2" id="inlineFormInput" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                            <label class="sr-only" for="inlineFormInputGroup">Password</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"></div>
                                </div>
                                <input asp-for="Password" class="form-control" id="inlineFormInputGroup" placeholder="Password">
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="form-check mb-2">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="autoSizingCheck">
                                <label class="form-check-label" for="autoSizingCheck">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary mb-2" formmethod="post">Sign In</button>
                        </div>
                    </div>
                </form>

                <div class="col-auto d-flex justify-content-center">
                    <img src="~/images/Twitter-red.png" class="rounded w-25 h-25" alt="twitter">
                </div>
                <div class="col-auto d-flex justify-content-center">
                    <h4>See what’s happening in the world right now</h4>
                </div>
                <div class="col-auto d-flex justify-content-center">
                    <h4>Join Twitter today.</h4>
                </div>
                <div class="col-auto d-flex justify-content-center">
                    <a href="@Url.Action("Registration", "User")" class="btn btn-primary mb-2">Sign Up</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>