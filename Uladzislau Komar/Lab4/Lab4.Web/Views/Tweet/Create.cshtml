@model Lab4.Domain.Contracts.ViewModels.TweetViewModel

<form asp-action="Create">
	<div class="hidden" id="username">@User.Identity.Name</div>
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group col-md-7">
		<input asp-for="Content" class="form-control" id="content" placeholder="What's new?" />
		<span asp-validation-for="Content" class="text-danger"></span>
	</div>
	<div class="form-group col-md-1">
		<input type="submit" id="submitButton" value="Submit" class="btn btn-primary" />
	</div>
</form>